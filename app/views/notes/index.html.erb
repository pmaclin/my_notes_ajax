<div class="page-header">
  <h1>Notes</h1>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <ul class="list-group">
      <li class="list-group-item">
        <%= form_for Note.new do |f| %>
        <div class="input-group">
          <%= f.text_field :content, :placeholder => "Add a new note", :class => "form-control" %>
          <span class="input-group-btn">
            <%= f.submit :class => "btn btn-default" %>
          </span>
        </div>

        <% end %>
      </li>
      <% @notes.each do |elephant| %>
        <%= render 'zebra', :giraffe => elephant %>
      <% end %>
    </ul>
  </div>
</div>





